@{
    ViewData["Title"] = "Welcome Page";
}
@model Friend

<form asp-action="Create" asp-controller="Friend" method="POST">
    <div class="form-group">
        <span asp-validation-for="NickName"></span>
        <label asp-for="NickName"></label>
        <input asp-for="NickName">
    </div>
    <div class="form-group">
        <span asp-validation-for="DOB"></span>
        <label asp-for="DOB"></label>
        <input asp-for="DOB">
    </div>
    <div class="form-group">
        <span asp-validation-for="NumHands"></span>
        <label asp-for="NumHands"></label>
        <input asp-for="NumHands">
    </div>
    <button>DO IT</button>
</form>